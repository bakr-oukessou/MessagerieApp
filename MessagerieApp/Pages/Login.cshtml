@page
@model MessagerieApp.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="auth-container">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            @Model.ErrorMessage
        </div>
    }
    <form method="post" class="auth-form">
        <h1>Connexion</h1>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" asp-for="LoginInput.Email" class="form-control" />
            <span asp-validation-for="LoginInput.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Password">Mot de passe</label>
            <input type="password" asp-for="LoginInput.Password" class="form-control" />
            <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Se connecter</button>
        <p class="mt-3">
            Vous êtes un fournisseur ? <a href="/RegisterSupplier">Inscrivez-vous ici</a>.
        </p>
    </form>
</div>