                <!-- Total Resources Card -->
                <div class="col-md-4 mb-4">
                    <div class="card dashboard-card bg-primary text-white">
                        <div class="card-body d-flex align-items-center">
                            <div class="icon-circle mr-3">
                                <i class="fas fa-desktop"></i>
                            </div>
                            <div>
