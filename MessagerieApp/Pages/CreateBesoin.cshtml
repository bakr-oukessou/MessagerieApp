@page
@model CreateBesoinModel
@{
    ViewData["Title"] = "Create Besoin";
}

<h1>Create Besoin</h1>

<form method="post">
    <div class="form-group">
        <label for="Description">Description</label>
        <input asp-for="Besoin.Description" class="form-control" />
        <span asp-validation-for="Besoin.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Quantite">Quantité</label>
        <input asp-for="Besoin.Quantite" class="form-control" />
        <span asp-validation-for="Besoin.Quantite" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>