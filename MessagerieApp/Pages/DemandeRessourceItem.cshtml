@page
@model DemandeRessourceItemModel
@{
    ViewData["Title"] = "Resource Request Item Management";
}

<h2>Resource Request Item Management</h2>

<form method="post">
    <div>
        <label for="DemandeRessourceId">Resource Request ID:</label>
        <input type="text" id="DemandeRessourceId" name="DemandeRessourceId" />
    </div>
    <div>
        <label for="ResourceType">Resource Type:</label>
        <select id="ResourceType" name="ResourceType">
            <option value="Computer">Computer</option>
            <option value="Printer">Printer</option>
        </select>
    </div>
    <div>
        <label for="Quantity">Quantity:</label>
        <input type="number" id="Quantity" name="Quantity" />
    </div>
    <button type="submit">Add Item</button>
</form>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Resource Request ID</th>
            <th>Resource Type</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DemandeRessourceItemList)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ResourceRequestId</td>
                <td>@item.Type</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>