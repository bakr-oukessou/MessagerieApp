		<a href="c:\users\geams\onedrive\bureau\messagerieapp\messagerieapp\pages\shared\_dashboardlayout.cshtml">c:\users\geams\onedrive\bureau\messagerieapp\messagerieapp\pages\shared\_dashboardlayout.cshtml</a>
        <nav class="sidebar-nav">
            <ul>
                <li><a href="#" data-page="Dashboard" class="nav-link active"><i class="fas fa-chart-pie"></i> Tableau de Bord</a></li>
                <li><a href="#" data-page="Ressource" class="nav-link"><i class="fas fa-desktop"></i> Ressources</a></li>
                <li><a href="#" data-page="Notifications" class="nav-link"><i class="fas fa-bell"></i> Notifications</a></li>
                <li><a href="#" data-page="Maintenance" class="nav-link"><i class="fas fa-tools"></i> Maintenance</a></li>
                <li><a href="#" data-page="Supplier" class="nav-link"><i class="fas fa-truck"></i> Fournisseurs</a></li>
            </ul>
        </nav>
    </div>

    <div class="content-area" id="content-area">
        @RenderBody()
    </div>
</body>
</html>
