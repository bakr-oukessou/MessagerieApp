@page
@model MessagerieApp.Pages.SupplierModel
@{
    ViewData["Title"] = "Fournisseurs";
}

<h2>Fournisseurs</h2>

<!-- Form to create a new supplier -->
<form method="post">
    <div class="form-group">
        <label for="CompanyName">Nom de l'entreprise</label>
        <input type="text" class="form-control" asp-for="Supplier.CompanyName" />
    </div>
    <div class="form-group">
        <label for="Location">Localisation</label>
        <input type="text" class="form-control" asp-for="Supplier.Location" />
    </div>
    <div class="form-group">
        <label for="Address">Adresse</label>
        <input type="text" class="form-control" asp-for="Supplier.Address" />
    </div>
    <div class="form-group">
        <label for="Website">Site web</label>
        <input type="text" class="form-control" asp-for="Supplier.Website" />
    </div>
    <div class="form-group">
        <label for="ManagerName">Nom du gérant</label>
        <input type="text" class="form-control" asp-for="Supplier.ManagerName" />
    </div>
    <button type="submit" class="btn btn-primary">Créer un Fournisseur</button>
</form>

<!-- List of suppliers -->
<h3>Liste des Fournisseurs</h3>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom de l'entreprise</th>
            <th>Localisation</th>
            <th>Adresse</th>
            <th>Site web</th>
            <th>Nom du gérant</th>
            <th>Blacklisté</th>
            <th>Raison de la blacklist</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model.Suppliers)
        {
            <tr>
                <td>@supplier.Id</td>
                <td>@supplier.CompanyName</td>
                <td>@supplier.Location</td>
                <td>@supplier.Address</td>
                <td>@supplier.Website</td>
                <td>@supplier.ManagerName</td>
                <td>@(supplier.IsBlacklisted ? "Oui" : "Non")</td>
                <td>@supplier.BlacklistReason</td>
                <td>
                    <form method="post" asp-page-handler="Update" asp-route-id="@supplier.Id">
                        <button type="submit" class="btn btn-warning">Modifier</button>
                    </form>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@supplier.Id">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                    <form method="post" asp-page-handler="Blacklist" asp-route-id="@supplier.Id">
                        <input type="text" name="reason" placeholder="Raison de la blacklist" />
                        <button type="submit" class="btn btn-dark">Blacklister</button>
                    </form>
                    <form method="post" asp-page-handler="RemoveFromBlacklist" asp-route-id="@supplier.Id">
                        <button type="submit" class="btn btn-success">Retirer de la blacklist</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>