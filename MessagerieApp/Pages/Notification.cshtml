@page
@model MessagerieApp.Pages.NotificationModel
@{
    ViewData["Title"] = "Notifications";
}

<h2>Notifications</h2>

<!-- Form to create a new notification -->
<form method="post">
    <div class="form-group">
        <label for="EmetteurId">ID de l'Émetteur</label>
        <input type="number" class="form-control" asp-for="EmetteurId" />
    </div>
    <div class="form-group">
        <label for="DestinataireId">ID du Destinataire</label>
        <input type="number" class="form-control" asp-for="DestinataireId" />
    </div>
    <div class="form-group">
        <label for="Titre">Titre</label>
        <input type="text" class="form-control" asp-for="Titre" />
    </div>
    <div class="form-group">
        <label for="Corps">Corps</label>
        <textarea class="form-control" asp-for="Corps"></textarea>
    </div>
    <div class="form-group">
        <label for="Type">Type de Notification</label>
        <select class="form-control" asp-for="Type">
            <option value="0">DemandeBesoins</option>
            <option value="1">AppelOffre</option>
            <option value="2">Maintenance</option>
            <option value="3">Livraison</option>
            <option value="4">Rejet</option>
            <option value="5">Acceptation</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Créer une Notification</button>
</form>

<!-- List of notifications -->
<h3>Liste des Notifications</h3>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Émetteur</th>
            <th>Destinataire</th>
            <th>Titre</th>
            <th>Corps</th>
            <th>Type</th>
            <th>Statut</th>
            <th>Date de Création</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var notification in Model.Notifications)
        {
            <tr>
                <td>@notification.Id</td>
                <td>@notification.EmetteurId</td>
                <td>@notification.DestinataireId</td>
                <td>@notification.Titre</td>
                <td>@notification.Corps</td>
                <td>@notification.Type</td>
                <td>@notification.Statut</td>
                <td>@notification.DateCreation</td>
                <td>
                    <form method="post" asp-page-handler="MarkAsRead" asp-route-id="@notification.Id">
                        <button type="submit" class="btn btn-success">Marquer comme Lu</button>
                    </form>
                    <form method="post" asp-page-handler="MarkAsArchived" asp-route-id="@notification.Id">
                        <button type="submit" class="btn btn-warning">Archiver</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>