@page
@model WebApplicationA1.Pages.RegisterModel
@{
    var today = DateTime.Now.ToShortDateString();
}
<h1 class="text-white bg-primary">Registration</h1>
<h6>@today</h6>
<form method="post" class="col-4 offset-4">
    <div class="form-group">
        <label class="control-label">Login</label>
        <input type="text" asp-for="Compte.Login" class="form-control" />
        <span asp-validation-for="Compte.Login" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Password</label>
        <input type="password" asp-for="Compte.Password" class="form-control" />
        <span asp-validation-for="Compte.Password" class="text-danger"></span>
    </div>

    <div class="text-light bg-primary">@Model.Msg</div>

    <div>
        <button type="submit" class="btn btn-success ">Register</button>
    </div>

</form>
