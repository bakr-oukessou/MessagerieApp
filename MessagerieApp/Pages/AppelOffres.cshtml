@page
@model MessagerieApp.Pages.AppelOffreModel
@{
    ViewData["Title"] = "Appel d'Offre";
}

<h2>Appel d'Offre</h2>

<form method="post">
    <div class="form-group">
        <label for="ResponsableRessourcesId">ID du Responsable des Ressources</label>
        <input type="number" class="form-control" asp-for="ResponsableRessourcesId" />
    </div>
    <div class="form-group">
        <label for="FournisseurSelectionneId">ID du Fournisseur Sélectionné</label>
        <input type="number" class="form-control" asp-for="FournisseurSelectionneId" />
    </div>
    <div class="form-group">
        <label for="AutresFournisseursId">IDs des Autres Fournisseurs (séparés par des virgules)</label>
        <input type="text" class="form-control" asp-for="AutresFournisseursId" />
    </div>
    <button type="submit" class="btn btn-primary">Envoyer les Notifications</button>
</form>